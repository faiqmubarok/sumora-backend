generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String?
  photo     String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  devices Device[] @relation("UserDevices")
}

model Device {
  id       String  @id @default(uuid())
  userId   String
  sensorId String  @unique
  qrcode   String?

  user       User         @relation("UserDevices", fields: [userId], references: [id])
  sensorData SensorData[]
}

model SensorData {
  id       String @id @default(uuid())
  deviceId String

  ph          Float
  chloromines Float
  solids      Float
  sulfate     Float

  device      Device       @relation(fields: [deviceId], references: [id])
  predictions Prediction[]
}

model Prediction {
  id       String @id @default(uuid())
  sensorId String

  result String

  sensor SensorData @relation(fields: [sensorId], references: [id])
}
